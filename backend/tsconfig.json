{
  "compilerOptions": {
    "lib": [
      "es6"
    ],
    "types": [
      "node"
    ],
    "target": "es6",
    "module": "commonjs",
    "rootDir": "./src",
    "baseUrl": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "strict": true,
    "allowJs": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "removeComments": true,
    "pretty": true,
  },
  "exclude": [
    ".next",
    ".idea",
    "node_modules",
    "bin",
    "assets",
    "dist",
    "build",
    "public"
  ],
  "include": [
    "**/*.ts"
  ]
}